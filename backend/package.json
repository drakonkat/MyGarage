{
  "name": "car-maintenance-backend",
  "version": "1.0.0",
  "description": "Backend for the Car Maintenance App",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "db:drop": "sequelize-cli db:drop --config src/config/config.js",
    "db:create": "sequelize-cli db:create --config src/config/config.js",
    "db:migrate": "sequelize-cli db:migrate --config src/config/config.js --migrations-path src/database/migrations --models-path src/database/models",
    "db:seed": "sequelize-cli db:seed:all --config src/config/config.js --seeders-path src/database/seeders --models-path src/database/models",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:setup"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7",
    "mysql2": "^3.10.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "sequelize-cli": "^6.6.2"
  }
}